# simulate_model.py
import pandas as pd
from xgboost import XGBClassifier
from sklearn.model_selection import train_test_split
import joblib

# Simulate basic indicators
def add_indicators(df):
    df["sma_5"] = df["close"].rolling(5).mean()
    df["sma_10"] = df["close"].rolling(10).mean()
    df["rsi_14"] = 50  # Dummy constant
    df["macd"] = df["close"] - df["close"].rolling(26).mean()
    df["macd_signal"] = df["macd"].rolling(9).mean()
    df.dropna(inplace=True)
    return df

df = pd.read_csv("training_data.csv")
df = add_indicators(df)
df["target"] = (df["close"].shift(-1) > df["close"]).astype(int)

features = ["open", "high", "low", "close", "volume", "sma_5", "sma_10", "rsi_14", "macd", "macd_signal"]
X = df[features]
y = df["target"]

X_train, X_test, y_train, y_test = train_test_split(X, y, test_size=0.2)

model = XGBClassifier(use_label_encoder=False, eval_metric="logloss")
model.fit(X_train, y_train)

joblib.dump(model, "model.pkl")
print("âœ… Saved model.pkl")

